@model cpj.portal.Models.ConfiguracaoViewModel
@{
    ViewData["Title"] = "Geral";    
    ViewData["exibeHeader"] = "n";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Inline Layout -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Configurações gerais
                </h2>               
            </div>
            <div class="body">
                @using (Html.BeginForm("Geral", "Configuracao"))
                {
                    @Html.HiddenFor(x => x.UsuarioID)
                    <div class="row clearfix">
                        <div class="col-xs-4">
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", @placeholder = "Nome" })
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(x => x.Senha, new { @type = "password", @class = "form-control", @placeholder = "Senha" })
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row clearfix">
                        <div class="col-xs-12">
                            <input type="submit" class="btn btn-primary btn-lg m-l-15 waves-effect" style="float:right" value="SALVAR" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- #END# Inline Layout -->